BiliBili2 = type=http-response,pattern=^https?:\/\/api\.vc\.bilibili\.com\/dynamic_svr\/v1\/dynamic_svr\/dynamic_(history|new)\?,requires-body=1,max-size=-1,script-path=https://raw.githubusercontent.com/Slotheve/Clash-Rule-Set/master/scripts/bilibili_plus.js,script-update-interval=0
BiliBili2 = type=http-response,pattern=^https?:\/\/app\.bilibili\.com\/x\/v2\/splash\/list,requires-body=1,max-size=-1,script-path=https://raw.githubusercontent.com/Slotheve/Clash-Rule-Set/master/scripts/bilibili_plus.js,script-update-interval=0
